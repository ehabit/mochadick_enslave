package enslave.item;

import cpw.mods.fml.common.registry.GameRegistry;
import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;
import enslave.Enslave;
import net.minecraft.client.renderer.texture.IIconRegister;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Blocks;
import net.minecraft.init.Items;
import net.minecraft.item.ItemCarrotOnAStick;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;

public class ItemWhip extends ItemCarrotOnAStick {
    
	public ItemWhip(String id) {
        super();
        this.setMaxDamage(100);
        this.setMaxStackSize(1);
        maxStackSize = 1;
		GameRegistry.registerItem(this, id, Enslave.MODID);
		//GameRegistry.addRecipe(new ItemStack(this, 1), new Object[] { "  X", " S ", "X  ", 'X', Blocks.iron_bars, 'S', Items.iron_ingot });
		setUnlocalizedName(id);
		setTextureName(Enslave.MODID + ":Whip");
		setCreativeTab(CreativeTabs.tabMisc);
    }
	
	public static void mainRegistry() {
		Enslave.whip = new ItemWhip("Whip");
    }
    
	@SideOnly(Side.CLIENT)
    public boolean isFull3D() {
        return true;
    }

    @SideOnly(Side.CLIENT)
    public boolean shouldRotateAroundWhenRendering() {
        return true;
    }
    
    @SideOnly(Side.CLIENT)
    public void whipAtPlayer(EntityPlayer player) {
    	player.swingItem();
    	player.worldObj.playSoundAtEntity(player, "enslave:whip", 1.0F, 1.0F / (itemRand.nextFloat() * 0.4F + 0.8F));
    }

    
    public ItemStack onItemRightClick(ItemStack itemstack, World world, EntityPlayer player) {
        
        player.swingItem();
        world.playSoundAtEntity(player, "enslave:whip", 1.0F, 1.0F / (itemRand.nextFloat() * 0.4F + 0.8F));        
        
        return itemstack;
    }

    @Override
    public void registerIcons(IIconRegister iconRegister)
    {
        this.itemIcon = iconRegister.registerIcon("enslave:Whip");
    }
}